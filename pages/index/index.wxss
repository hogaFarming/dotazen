/**index.wxss**/
.section-player-data {
  padding: 16rpx;
}
.logout-btn {
  position:absolute;
  right:16rpx;
  top:16rpx;
  line-height: 1;
}
.player-meta {
  display: flex;
  justify-content: flex-start;
}
.player-meta-item {
  margin-right: 24rpx;
}
.player-meta-value {

}
.player-meta-label {
  color: rgba(255,255,255,0.6);
  font-size: 24rpx;
}

.rank-tier-wrap {
  width: 100rpx;
  height: 100rpx;
  position: relative;
}
.rank-tier-star,
.rank-tier-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
}

.mlayout-grid {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 8rpx;
}
.mlayout-grid:nth-child(2n+1) {
  background-color: #2e3741;
}
.mlayout-grid-cell {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.mlayout-grid-cell:first-child {
  flex: 1 1 auto;
}
.mlayout-grid-cell:nth-child(2) {
  align-items: flex-end;
  margin-right: 20rpx;
  flex: 0 0 140rpx;
}
.mlayout-grid-cell:last-child {
  align-items: flex-end;
  flex: 0 0 250rpx;
}

.kdabar {
  display: flex;
  width: 100%;
}
.kdabar-kills,
.kdabar-deaths,
.kdabar-assists {
  height: 8rpx;
}
.kdabar-kills {
  background-color: #EA030E;
}
.kdabar-deaths {
  background-color: #979797;
}
.kdabar-assists {
  background-color: #A9CF54;
}
