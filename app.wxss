/**app.wxss**/
@import "vendors/font-awesome/font-awesome.wxss";

page, view, input, button {
  box-sizing: border-box;
}
page {
  height: 100%;
}

input {
  height: 64rpx;
  min-height: 64rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  font-size: 32rpx;
  color: #ffffff;
  background: #1C242D;
  box-shadow: inset 0 0 2rpx rgba(0,0,0,0.6);
}
button {
  border-radius: 0;
  border: 1px solid #92bb35;
  background: rgba(10,10,10,0.15);
  color: #92bb35;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
}
.btn-icon {
  margin-right: 10rpx;
}

.container {
  min-height: 100%;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  background-color: #1b242b;
  color: #fff;
  font-size: 28rpx;
}
.section {
  /* background: #2d3740; */
  margin: 0 8rpx 24rpx;
  box-shadow: 0 0 3px rgba(10,10,10,0.4);
  /* border: 1px solid #242F39; */
  border-radius: 1px;
  background: #242F39;
  position: relative;
}
.section:last-child {
  margin-bottom: 0;
}
.section-loading {
  text-align: center;
  font-size: 48rpx;
  padding: 20rpx;
}
.section-title {
  margin: 0 16rpx 16rpx;
}
.section-list {

}
.section-list-item {
  padding: 16rpx;
  border-bottom: 1px solid #1b242b;
}
.section-list-empty {
  padding: 16rpx;
}

.media {
  display: flex;
}
.media-image {
  width: 84rpx;
  height: 84rpx;
  margin-right: 20rpx;
}
.media-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.media-title {
  font-size: 28rpx;
}
.media-secondary {
  font-size: 24rpx;
  color: #c4c4c4;
}
